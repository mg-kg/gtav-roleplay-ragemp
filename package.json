{
  "name": "gtav-mmrp",
  "version": "1.0.0",
  "description": "RAGEMP server",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && server.exe",
    "watch": "nodemon --watch packages --watch client_packages --exec \"./server.exe\"",
    "clean": "rimraf client_packages && rimraf packages",
    "build-server": "cd src/server && tsc",
    "build-client": "cd src/client && tsc && npm run copy-client",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "lint": "eslint . --ext .ts",
    "type-check": "cd src/server/ && tsc --noEmit && cd ../client/ && tsc --noEmit",
    "copy-client": "ncp src/client/modules/authentication/form client_packages/modules/authentication/form"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run type-check && npm run lint"
    }
  },
  "author": "kgkg",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/glob": "^7.1.1",
    "@types/keycode": "github:mg-kg/types-keycode#master",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.5",
    "@types/ragemp-c": "github:CocaColaBear/types-ragemp-c#master",
    "@types/ragemp-s": "github:CocaColaBear/types-ragemp-s#master",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-plugin-json": "^2.1.1",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "i18next": "^19.4.4",
    "log4js": "^6.2.1",
    "mongoose": "^5.9.15",
    "ncp": "^2.0.0"
  },
  "nodemonConfig": {
    "delay": "1000",
    "watch": [
      "client_packages",
      "packages"
    ],
    "exec": "npm run copy-client && ragemp-server.exe",
    "ignore": [
      "client_packages/modules/authentication/form/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mg-kg/gtav-roleplay-ragemp.git"
  }
}
